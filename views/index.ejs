      <div class="container">
        <h1>Animal Dashboard</h1>
        <hr>
        <h3><a href="/mongooses"> Create New Animal</a></h3>
        <hr>
        <!-- Display All Animals -->
        <div class="container">
          <!-- <% if (typeof(allAnimals) != "undefined") { %> -->
            <% for(var x in allAnimals) { %>
            <h3>Animal's name: <a href="/mongooses/edit/<%= allAnimals[x]._id %>"><%= allAnimals[x].name %></a> </h3>
              <form action="/mongooses/destroy/<%= allAnimals[x]._id %>" method="post">
                <input type="submit" class="btn btn-danger" value="Delete">
              </form>
            <hr>
            <%}%>
